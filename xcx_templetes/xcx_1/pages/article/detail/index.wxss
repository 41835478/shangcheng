/**answer.wxss**/
@import "/wxParse/wxParse.wxss";
.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.question {
  position: relative;
  width: 650rpx;
  padding: 40rpx 50rpx 30rpx;
  background: #298de5;
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}

.answerer-wrp {
  position: relative;
  width: 750rpx;
  height: 185rpx;
  background: #fff;
  overflow:hidden;
}

.answerer-wrp .bg-half {
  position: absolute;
  top: 0;
  width: 750rpx;
  height: 75rpx;
  background: #298de5;
  overflow:hidden;
}

.answerer {
  position: relative;
  margin: 0 auto;
  width: 630rpx;
  height: 120rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #ebebeb;
  border-radius: 3px;
  box-shadow: 0 1px 2px #bebebe;
  overflow:hidden;
}

.answerer .avatar {
  flex: 1;
  width: 90rpx;
  height: 90rpx;
}


.answerer .answerer-info {
  flex: 5;
  text-align: left;
  padding: 1rpx 20rpx;
  line-height: 38rpx;
  overflow:hidden;

}

.answerer .answerer-info text {
  display: block;
  overflow:hidden;
}

.answerer .answerer-info .answerer-name {
  margin-top: 1rpx;
  font-size: 32rpx;
}

.answerer .answerer-info .answerer-des {
  font-size: 22rpx;
  color: #808080;
  line-height: 28rpx;
  display: block;
  width: 100%;
  float: left;
  margin-left: 2%;
  /*height:30px; */
  overflow: hidden;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.answerer .follow {
  flex: 2;
  padding: 15rpx 0;
  font-size: 22rpx;
}

.answerer .follow text {
  display: inline-block;
  padding: 15rpx 20rpx;
  color: #40bcd0;
  border: solid 2px #40bcd0;
  border-radius: 6rpx;
}

.answer-content {
  padding: 60rpx 40rpx;
  background: #fff;
}

.answer-content text {
  font-size: 32rpx;
  color: #454545;
  line-height: 44rpx;
}

.answer-content image {
  width: 100%;
  margin: 20rpx 0;
}
