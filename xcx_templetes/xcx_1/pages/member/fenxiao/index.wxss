.head{
   width:100%;
   overflow:hidden;
   background:#282c39;
   position:relative
   }
.head ul{
   width:100%;
   margin:auto;
   height:50px; 
   border-top:1px solid #191c27
 }
.head ul li{
   width:50%;
    margin:auto; 
    height:50px;
    float:left;
    text-align:center
    }
.head ul li span{
   display:inline-block;
   height:50px; margin:auto;
   font-size:14px; line-height:50px;
   color:#FFF;padding-left:20px;
   padding-right:10px;
   }
.v_2{
   background:url(https://apis.lightupourlife.com/Public/images/xcx/v_2.png) no-repeat left center;background-size: auto 20px;
   }
.v_1{
   background:url(https://apis.lightupourlife.com/Public/images/xcx/v_1.png) no-repeat left center;background-size: auto 20px;
   }


.carts-item {
	display: flex;
	flex-direction: row;
	height:190rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:720rpx;
	border-bottom: 1px solid #eee;
	padding: 30rpx 0 10rpx 30rpx;
}

/*左部图片*/
.carts-image {
	width:150rpx;
	height:150rpx;
  display:block;  
  border-radius: 50%;
  margin: 20rpx;
}

.carts-text {
	margin-left: 10rpx;

	display: flex;
	flex-direction: column;
	justify-content: flex-start;

}

/*会员名*/
.carts-title {
  margin-top: 40rpx;
	font-size: 38rpx;
  color:#FFF;
	
}

/*推荐人*/
.carts-subtitle {
	margin-top: 30rpx;
	font-size: 25rpx;
	color:darkgray;
	padding: 0 0rpx;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}
