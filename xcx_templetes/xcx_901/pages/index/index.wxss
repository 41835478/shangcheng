page {
	background: #eee;
  font-family: '微软雅黑';

}
.swiper-image {
	width: 100%;
	height: 100%;
}
.view_search{
	width: 100%;
	height: 125rpx;
	background: #ffffff;
	
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.view_search text{
	font-size: 30rpx;
	color: #6c6c6c;
	padding-right: 10rpx;
	width: 100rpx;
	line-height: 30rpx;
	display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
	flex-shrink: 0;
}
.view_searchbg{
	width: 70%;
	height: 70rpx;
	border-style:solid;
	border-width: 2rpx;
	border-radius: 15rpx;
	border-color: #cdcdcd;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	
}

.input_search{
	flex-grow: 2;
	font: 29rpx;
	color: #cdcdcd;
    font-size:80%
	
	
}

.input_search{
	font: 14px;
	color: #999;
	margin-left: 25rpx;
}
.view1{
	height: 100%;
	width: 85rpx;
	flex: row;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.view1 image{
	height: 45rpx;
	width: 45rpx;
}
.line{
	height:100%;
	width: 2rpx;
	background: #cdcdcd;
}
/*功能区*/
.func-area {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	margin: 0 0;
	padding-top: 10rpx;
	background: white;
}

.func-area view {
	width: 25%;
	text-align: center;
}

.func-area text{
	display: block;
	color: #6c6c6c;
	font-size: 30rpx;
	line-height: 50rpx;
}

.func-area image {
	width: 125rpx;
	height: 125rpx;
	
}
.container-class{

display: flex;
flex-direction: column;
}

/*主商品区*/
.container-goods {
	background: white;
	margin-top: 20rpx;

}
.category_title{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-end;
}
.redline{
	
	height: 80rpx;
	width: 10rpx;
	background-color: red;
}
.container-goods .caption {
	font-size: 32rpx;
	width: 100%;
	line-height: 60rpx;
	text-indent: 20rpx;
	padding: 10rpx;
}

.main-goods {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	border-top: 1px solid #eee;
}

.main-goods .single-goods {
	width: 50%;
}

.main-goods image {
	width: 220rpx;
	height: 220rpx;
	display: block;
	margin: 20rpx auto;
}

.main-goods .title {
	display: block;
	color: #999;
	font-size: 28rpx;
	margin: 10rpx 6rpx;
	margin-left: 20rpx;
	line-height: 28rpx;
	display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
	flex-shrink: 0;
}

.main-goods .summary {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	
}

.main-goods .summary text {
	font-size: 28rpx;
	margin: 10rpx 20rpx;
}

.main-goods .summary .price {
	color: red;
}

.main-goods .summary .sale {
	color: gray;
}

.view-ad{
	margin-top: 20rpx;
	
	width: 100%;
	/*height: 600rpx;*/ /*prince 20170807*/
	display: flex;
	flex-direction: column;
}

.ad-header{
	
	width: 100%;
	height: 400rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.ad-footer{
    
	width: 100%;
	height: 200rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.ad-footer image{
	width: 373rpx;
	height: 200rpx;
}
.ad1{
	width: 373rpx;
	height: 396rpx;
}

.header-right{
	width: 373rpx;
	height: 396rpx;
    display: flex;
	flex-direction: column-reverse;
	justify-content: space-between;
}

.header-right image{
	width: 373rpx;
	height: 196rpx;
}

.footer {
	
	display: flex; 
	flex-direction: row; 
	justify-content: space-between;
	position: fixed;
	bottom: 60rpx;
	right: 60rpx;
}

.footer image{
	position: fixed;
	bottom: 40rpx;
	right: 40rpx;
	width: 120rpx;
	height: 100rpx;
}


/*红包优惠券开始*/
.sc-header{
}
.view-header{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.coupon-area {
 /*	margin-bottom: 10px;*/
	background-image: url('https://apis.lightupourlife.com/Public/images/xcx/coupon1.png');
	background-repeat:round;
}

/*每行单元格*/
.coupon-item {
	display: flex;
	flex-direction: row;
	height:150rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:340rpx;
	padding: 20rpx 0 10rpx 15rpx;
}

.view-date {
	display: flex;
	flex-direction: row;
	height:50rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:340rpx;
	border-bottom: 1px solid #eee;
	align-items: right;
}

.text-date{
	width: 100%;
  text-align: center;
  color:#def0d0;
  font-size: 24rpx;
}

.item-left{
	width: 190rpx;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: left;
}

.item-right{
	width: 150rpx;
	margin-left: 30rpx;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
}

.text-value{
  margin-top: 20rpx; 
  margin-left: 35rpx;
	font-size: 45rpx;
	color: #eee;
}


.text-hint{
	color: #eee;
	margin-left: 5rpx;
	margin-top: 10rpx;
	font-size: 25rpx;
}

.text-name{
color: #eee;
margin-top:40rpx;
font-size: 25rpx;
margin-left:35rpx;

}
/*红包优惠券结束*/

/*商城热点开始*/
.hot{ 
  width:100%; 
  height:30px; 
  padding-top:5px; 
  padding-bottom:5px; 
  background:#FFF; 
  border-top:1px solid #eeeeee;
  }
.hot_left{ 
  float:left; 
  border-right:1px solid #eeeeee;
  width:15%;height:30px; 
  background:url(https://apis.lightupourlife.com/Public/images/xcx/headlines.jpg) no-repeat center center;
  background-size: auto 20px; 
  margin-right:2%
  }
.hot_ul{ 
  float:left; 
  width:80%; 
  height:30px; 
  overflow:hidden
  }
.hot_first{ 
  width:100%; 
  height:30px; 
  float:left;
  }
.hot_span{ 
  display:block; 
  width:15%; 
  float:left; 
  font-size:12px; 
  line-height:18px; 
  color:#E71F19; 
  border:1px solid #E71F19;
  border-radius:2px; 
  margin-top:5px; 
  text-align:center
  }
.hot_name{ 
  display:block; 
  width:80%; 
  float:left; 
  margin-left:2%; 
  height:30px; 
  overflow:hidden; 
  font-size:14px; 
  line-height:30px; 
  color:#666;    
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;  
  }
  /*商城热点结束*/



